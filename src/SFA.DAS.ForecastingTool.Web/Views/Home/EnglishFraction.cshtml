@model SFA.DAS.ForecastingTool.Web.Models.ForecastQuestionsModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h2 class="heading-xlarge">English percentage</h2>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error">
                <p class="error-message">@Model.ErrorMessage</p>
            </div>
        }
        <div class="warning">
            <p class="warning-message">You can skip this step if you don’t have this information.</p>    
        </div>
        
        <p>This is a calculation based on the proportion of your workforce who lived in England in the previous tax year.</p>
        <form method="post">
            <div class="form-group">
                <label>
                    <span>Estimated English percentage</span>
                    <input name="englishFraction" type="number" class="form-control-1-4" aria-label="Estimate of percentage of workforce in England (1-100)"
                           value="@(Model.EnglishFraction > 0 ? Model.EnglishFraction.ToString() : "")"/>
                    <span>%</span>
                </label>
            </div>
            <input name="englishFractionSubmit" type="submit" class="button" value="Next" />
            <input name="englishFractionSkip" type="submit" class="button button-secondary" value="Skip" />
        </form>


        @Html.Partial("_PreviousAnswers", Model)
    </div>
</div>