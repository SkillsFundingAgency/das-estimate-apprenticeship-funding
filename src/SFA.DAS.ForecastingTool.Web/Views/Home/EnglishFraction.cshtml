@model SFA.DAS.ForecastingTool.Core.Models.ForecastQuestionsModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Employees living in England</h1>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error">
                <p class="error-message">@Model.ErrorMessage</p>
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label-bold">
                    <span>What percentage of your pay bill goes to employees living in England?</span>
                    <div class="form-hint">This only needs to be an estimate. Enter ‘100’ if you’re unsure</div>
                </label>
                <input name="englishFraction" type="number" class="form-control"
                       value="@(Model.EnglishFraction > 0 ? Model.EnglishFraction.ToString() : "")" min="1" max="100" style="width: 50px;"/>
                <span>%</span>
            </div>
            <input name="englishFractionSubmit" type="submit" class="button" value="Save and continue"/>
        </form>


        @Html.Partial("_PreviousAnswers", Model)
    </div>
</div>



@section scripts {

    <script type="text/javascript">
        $(document).ready(function() {
            ga('send', 'pageview', '/EnglishFraction');
        });
    </script>
}


