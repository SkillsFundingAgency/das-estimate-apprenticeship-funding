@model SFA.DAS.ForecastingTool.Core.Models.ForecastQuestionsModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Enter your organisation’s UK payroll</h1>
        <form method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="form-group @(!string.IsNullOrEmpty(Model.ErrorMessage) ? "error" : "")">
                <label class="form-label-bold" for="paybill">
                    <span class="form-label-bold">Your organisation’s annual UK payroll</span>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <span class="error-message" id="payroll-error">@Model.ErrorMessage</span>
                    }
                </label>
                <span>£</span>
                <input name="paybill" id="paybill" type="number" class="form-control-1-3" aria-label="Annual payroll in whole pounds"
                   value="@(Model.Paybill > 0 ? Model.Paybill.ToString() : "")" required="required" aria-required="true" 
                   @(!string.IsNullOrEmpty(Model.ErrorMessage) ? "aria-invalid=true aria-describedby=payroll-error" : "" ) >
            </div>
            <input name="paybillSubmit" type="submit" class="button" value="Save and continue"/>
        </form>
    </div>
</div>


@section scripts {

    <script type="text/javascript">
        $(document).ready(function() {
            ga('send', 'pageview', '/Paybill');
        });
    </script>
}
