@model SFA.DAS.ForecastingTool.Web.Models.ResultsViewModel

<h2 class="heading-xlarge">Your levy amount</h2>
<p>The amount of levy you will pay is: @Model.LevyAmount.ToString("C")</p>
<p>Here is your levy cash flow forecast</p>

<table>
    <thead>
    <tr>
        <th>Month</th>
        <th class="financial">Funding Received</th>
        <th class="financial">Training Paid</th>
        <th class="financial">Balance</th>
        <th class="financial">Co-Payment</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var month in Model.Results)
    {
        <tr>
            <td>@month.Date.ToString("MMMM")</td>
            <td class="financial">@Html.FinancialText(month.LevyIn)</td>
            <td class="financial">@Html.FinancialText(month.TrainingOut)</td>
            <td class="financial">@month.Balance.ToString("C")</td>
            <td class="financial">@Html.FinancialText(month.CoPayment)</td>
        </tr>
    }
    </tbody>
</table>

@Html.Partial("_PreviousAnswers", Model)