@using System.Web.Optimization
@model SFA.DAS.ForecastingTool.Web.Models.TrainingCourseViewModel

<div class="training-course">
    <div class="grid-row">
        <div class="column-two-thirds">
            <h2 class="heading-xlarge">Apprentices and training</h2>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error">
                    <p class="error-message">@Model.ErrorMessage</p>
                </div>
            }
            @if (Model.LevyFundingReceived > 0)
            {
                <p class="no-bottom-margin">You can now estimate how much you’ll be spending on apprenticeships every month or you can <a href="0x0/12">skip this step</a></p>
            }
            else
            {
                <p>You can now estimate the cost of your apprenticeships.You’ll only need to contribute 10%, the government will pay the rest.</p>
                    <p class="no-bottom-margin">Or you can <a href="0x0/12">skip this step</a></p>
                
                
            }
        </div>
    </div>
    <hr />
    <div class="grid-row">
        <div class="column-full-width">
            <form method="post">
                @Html.AntiForgeryToken()
                <input name="trainingCourseSubmit" type="submit" class="hidden" aria-hidden="true" />

                @for (var i = 0; i < Model.SelectedCohorts.Count; i++)
                {
                    var cohort = Model.SelectedCohorts[i];

                    <div class="grid-row">
                        <div class="column-two-thirds">
                            <h3 class="heading-medium no-margin">Apprenticeship @(i + 1)</h3>

                            <div class="form-group">
                                <label class="form-label-bold" for="standard@(i)">Type of apprenticeship training</label>
                                <select name="standard" id="standard@(i)" class="form-control training-standard" aria-label="Training standard">
                                    @foreach (var standard in Model.Standards)
                                    {
                                        if (standard.Code == cohort.Code)
                                        {
                                            <option value="@standard.Code" selected="selected" data-price="@standard.Price" data-duration="@standard.Duration">@standard.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@standard.Code" data-price="@standard.Price" data-duration="@standard.Duration">@standard.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label-bold" for="cohorts@(i)">Number of apprentices</label>
                                <input name="cohorts" id="cohorts@(i)" type="number" class="form-control cohort-size" aria-label="Number of apprentices" value="@cohort.Qty" />
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    <legend class="form-label-bold">Start date</legend>
                                    <div class="form-date">
                                        <div class="form-group form-group-month">
                                            <label for="startDateMonth@(i)">Month</label>
                                            <input name="startDateMonth" id="startDateMonth@(i)" type="number" pattern="[0-9]*" min="0" max="12" class="form-control"
                                                   placeholder="MM" value="@cohort.StartDate.Month.ToString("00")">
                                        </div>
                                        <div class="form-group form-group-year">
                                            <label for="startDateYear@(i)">Year</label>
                                            <input name="startDateYear" id="startDateYear@(i)" type="number" pattern="[0-9]*" min="17" max="99" class="form-control"
                                                   placeholder="YY" value="@(cohort.StartDate.Year - 2000)">
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="column-one-third" style="padding-top: 50px">
                            <button name="trainingCourseDelete@($"{cohort.Qty}x{cohort.Code}-{cohort.StartDate.ToString("MMyy")}")" type="submit" class="button button-secondary">Delete</button>
                        </div>
                    </div>
                    <hr />
                }

                <div class="grid-row">
                    <a name="next-apprenticeship"></a>
                    <div class="column-two-thirds">
                        <h3 class="heading-medium no-top-margin">Apprenticeship @(Model.SelectedCohorts.Count + 1)</h3>

                        <div class="form-group">
                            <label class="form-label-bold" for="standardNew">Type of apprenticeship training</label>
                            <select name="standard" id="standardNew" class="form-control training-standard" aria-label="Training standard">
                                <option value="noselection">Please choose...</option>
                                @foreach (var standard in Model.Standards)
                                {
                                    <option value="@standard.Code" data-price="@standard.Price" data-duration="@standard.Duration">@standard.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label-bold" for="cohortsNew">Number of apprentices</label>
                            <input name="cohorts" id="cohortsNew" type="number" class="form-control cohort-size" aria-label="Number of apprentices"/>
                        </div>
                        <div class="form-group">
                            <fieldset>
                                <legend class="form-label-bold">Start date</legend>
                                <div class="form-date">
                                    <div class="form-group form-group-month">
                                        <label for="startDateMonth">Month</label>
                                        <input name="startDateMonth" id="startDateMonth" type="number" pattern="[0-9]*" min="0" max="12" class="form-control"
                                               placeholder="MM" value="05">
                                    </div>
                                    <div class="form-group form-group-year">
                                        <label for="startDateYear">Year</label>
                                        <input name="startDateYear" id="startDateYear" type="number" pattern="[0-9]*" min="17" max="99" class="form-control"
                                               placeholder="YY" value="17">
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                    </div>
                    <div class="column-one-third" style="padding-top: 50px">
                    </div>
                </div>
                <p class="text-secondary">This can be negotiated with your training provider</p>
                <hr />

                <div class="form-group" style="margin-top: 15px;">
                    <input name="trainingCourseAdd" type="submit" class="button button-grey" value="Add another" />
                    <input name="trainingCourseSubmit" type="submit" class="button" value="Next"/>
                    <input name="trainingCourseSkip" type="submit" class="button button-secondary" value="Skip"/>
                </div>
            </form>


            @Html.Partial("_PreviousAnswers", Model)
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/training-course")
}