@model SFA.DAS.ForecastingTool.Web.Models.ForecastQuestionsModel

<h3 class="heading-medium">Previous answers</h3>
<div>
    <table>
        <tr>
            <td></td>
            <td>
                <a href="@Url.Action("Welcome")">Start again</a>
            </td>
        </tr>
        <tr>
            <td>Annual payroll of @Model.Paybill.ToString("C0")</td>
            <td><a href="@Url.Content($"~/forecast")">Change</a></td>
        </tr>
        @if (Model.EnglishFraction > 0)
        {
            <tr>
                <td>English percentage of @(Model.EnglishFraction)%</td>
                <td><a href="@Url.Content($"~/forecast/{Model.Paybill}")">Change</a></td>
            </tr>
        }
        @if (Model.SelectedStandards.Any())
        {
            <tr>
                <td>
                    @foreach (var standard in Model.SelectedStandards)
                    {

                        if (standard.Qty == 0)
                        {
                            <div>
                                No apprentices selected
                            </div>

                        }
                        else
                        {
                            <div>
                                @standard.Qty apprentices on @standard.Name training course
                            </div>
                        }
                    }
                </td>

                <td style="vertical-align: top;"><a href="@Url.Content($"~/forecast/{Model.Paybill}/{Model.EnglishFraction}")">Change</a></td>
            </tr>
        }
    </table>
</div>